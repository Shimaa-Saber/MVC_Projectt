<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }

        .sidebar {
            width: 220px;
            background-color: #ffffff; /* أبيض */
            padding: 20px;
            color: black;
            border-right: 1px solid #dee2e6;
        }

            .sidebar a {
                color: #000; /* أسود */
                display: flex;
                align-items: center;
                margin: 15px 0;
                text-decoration: none;
                font-weight: 500;
                transition: all 0.2s ease-in-out;
            }

                .sidebar a:hover {
                    color: #007bff;
                    transform: translateX(5px);
                }

                .sidebar a i {
                    margin-right: 10px;
                }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="mb-4">Dashboard</h4>
        <a href="/Dashboard/Index"><i class="fas fa-chart-line"></i> Dashboard</a>
        <a href="/Sessions/Index"><i class="fas fa-clock"></i> Sessions</a>
        <a href="/Halls/Index"><i class="fas fa-building"></i> Halls</a>
        <a href="/Makeup/Index"><i class="fas fa-magic"></i> Makeup</a>
        <a href="/Atelier/Index"><i class="fas fa-store"></i> Atelier</a>
    </div>
    <div class="main-content">
        @RenderBody()
    </div>
</body>
</html>