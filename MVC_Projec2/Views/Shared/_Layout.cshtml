@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wedding</title>
    <!-- Google Fonts أول -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="..." crossorigin="anonymous" referrerpolicy="no-referrer" />


    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


   

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top custom-navbar">
            <div class="container-fluid d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/images/n1.jpg" asp-append-version="true" style="border-radius: 50px; width: 50px; height: 50px; margin-left: 50px;" alt="Logo" />
                </a>
                 <h4>Zaffa</h4>
                <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                        aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link active" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact Us</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Wedding Services
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                <li><a asp-controller="Hall" asp-action="GetAll" class="dropdown-item">Hall</a></li>
                                <li><a asp-controller="MakeUp" asp-action="GetAll" class="dropdown-item">MakeUp</a></li>
                                <li><a asp-controller="Atelier" asp-action="GetAll" class="dropdown-item">Atalier</a></li>
                                <li><a asp-controller="Session" asp-action="GetAll" class="dropdown-item">Session</a></li>
                                <li><a asp-controller="Decor" asp-action="GetAll" class="dropdown-item">Decoration</a></li>
                            </ul>
                        </li>
                    </ul>
                    <!-- MY Booking button -->
                    <form asp-action="Index" asp-controller="Booking" method="get">
                        <button type="submit" class="btn btn-outline-secondary me-2">
                            MY Booking
                        </button>
                    </form>

                    <!-- Login button -->
                    <form asp-action="Login" asp-controller="Account" method="get">
                        <button type="submit" class="btn btn-outline-secondary me-2" id="Login">
                            <i class="bi bi-lock"></i> Login
                        </button>
                    </form>

                    <!-- Register button -->
                    <form asp-action="Register" asp-controller="Account" method="get">
                        <button type="submit" class="btn btn-outline-secondary me-2" id="Register">
                            <i class="bi bi-person-plus"></i> Registration
                        </button>
                    </form>

                    <!-- Logout button -->
                    <form asp-action="Logout" asp-controller="Account" method="post" id="LogoutForm">
                        <button type="submit" class="btn btn-outline-secondary me-2" id="Logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>

                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer id="footer" class="mt-3">
        <div class="footer-logo text-center">
            <img src="~/images/n2.jpg" asp-append-version="true" alt="footer-logo" />
        </div>
        <div class="social-links text-center">
            <i class="fa-brands fa-twitter"></i>
            <i class="fa-brands fa-facebook"></i>
            <i class="fa-brands fa-instagram"></i>
            <i class="fa-brands fa-youtube"></i>
            <i class="fa-brands fa-pinterest-p"></i>
        </div>
        <div class="copyright text-center">
            &copy; Copyright <strong><span>Weeding Party</span></strong>. All Rights Reserved
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</body>
</html>


<script>
    function handleLogin() {

        document.getElementById("Login").style.display = "none";
        document.getElementById("Register").style.display = "none";
        document.getElementById("Logout").style.display = "inline";
    }

    function handleLogout() {
        document.getElementById("Login").style.display = "inline";
        document.getElementById("Register").style.display = "inline";
        document.getElementById("Logout").style.display = "none";
    }

</script>
<script src="~/js/bootstrap.bundle.min.js"></script>

 