@model IEnumerable<MVC_Projec2.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container mt-4">
    <div class="card shadow" style="max-width: 1200px; margin: 0 auto;">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-2">
            <h3 class="mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" class="btn btn-light">
                <i class="fas fa-plus"></i> New Booking
            </a>
        </div>
        <div class="card-body p-2">
            <div class="table-responsive">
                <table class="table table-sm table-hover table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>Hall</th>
                            <th>Session</th>
                            <th>Atelier</th>
                            <th>MakeUp</th>
                            <th>Decor</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Hall?.Name</td>
                                <td>@item.Session?.Name</td>
                                <td>@item.Atelier?.Name</td>
                                <td>@item.MakeUp?.Name</td>
                                <td>@item.Decor?.Style</td>
                                @* <td>@item.BookingDate.ToString("yyyy-MM-dd")</td> *@
                                <td>
                                    <span class="badge @(item.Status == "Pending" ? "bg-warning" : "bg-success")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
    </style>
}


